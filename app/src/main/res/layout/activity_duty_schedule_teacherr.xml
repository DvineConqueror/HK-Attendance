<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_duty_schedule_teacherr">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fillViewport="true"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/top_wave"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/top_wave"
                android:scaleType="fitXY"
                android:src="@drawable/top_wave" />

            <TextView
                android:id="@+id/duty_schedule_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/duty_schedule_label"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/blue"
                android:gravity="center"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_upcoming_duty1"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/yellow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/upcoming_date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upcoming_date1"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/upcoming_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 7:30 am - 9:00 am"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_subject1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject: PED 031"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_teacher1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher: Mrs. Marlyn Ogoy"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_room1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room: RS 115"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_students_list1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Students List: [link]"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_upcoming_duty2"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_below="@id/card_upcoming_duty"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/yellow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/upcoming_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending: September 5, 2024"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/upcoming_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 7:30 am - 9:00 am"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_subject2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject: PED 031"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_teacher2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher: Mrs. Marlyn Ogoy"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_room2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room: RS 115"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/upcoming_students_list2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Students List: [link]"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_upcoming_duty3"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_below="@id/card_upcoming_duty2"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/yellow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/upcoming_date3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending: September 5, 2024"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/upcoming_time3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 7:30 am - 9:00 am"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_subject3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject: PED 031"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_teacher3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher: Mrs. Marlyn Ogoy"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_room3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room: RS 115"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_students_list3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Students List: [link]"
                        android:textColor="@color/white" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:background="@drawable/rectangle_bottom"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="87dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/time_line"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home_icon" />

        <ImageView
            android:id="@+id/time_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/timeline_icon"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="29dp" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/time_line"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_icon"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>