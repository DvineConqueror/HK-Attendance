<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_duty_schedule_teacherr">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wave3_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:contentDescription="wavetop"
                android:scaleType="fitXY"
                android:src="@drawable/wave2_top" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duty Schedule"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/blue"
                android:gravity="center"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_upcoming_duty"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/yellow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/upcoming_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending: September 5, 2024"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/upcoming_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 7:30 am - 9:00 am"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject: PED 031"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher: Mrs. Marlyn Ogoy"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room: RS 115"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_students_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Students List: [link]"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_upcoming_duty2"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_below="@id/card_upcoming_duty"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/yellow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/upcoming_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending: September 5, 2024"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/upcoming_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 7:30 am - 9:00 am"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_subject2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject: PED 031"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_teacher2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher: Mrs. Marlyn Ogoy"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_room2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room: RS 115"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_students_list2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Students List: [link]"
                        android:textColor="@color/white" />
                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_upcoming_duty3"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_below="@id/card_upcoming_duty2"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/yellow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/upcoming_date3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending: September 5, 2024"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/upcoming_time3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 7:30 am - 9:00 am"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_subject3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject: PED 031"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_teacher3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher: Mrs. Marlyn Ogoy"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_room3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room: RS 115"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_students_list3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Students List: [link]"
                        android:textColor="@color/white" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_below="@id/card_upcoming_duty"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/white">
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="429dp"
        android:layout_height="111dp"
        android:background="@drawable/rectangle_bottom"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="bottom"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="872dp">

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView27"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home_icon" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/timeline_icon"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="29dp" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView27"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_icon"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
