<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity_student_home_page">

    <ImageView
        android:id="@+id/wave3_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:contentDescription="wavetop"
        android:scaleType="fitXY"
        android:src="@drawable/wave2_top" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="137dp"
        android:layout_height="108dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/small_logo"
        android:contentDescription="Small logo"/>


    <ImageView
        android:id="@+id/smart"
        android:layout_width="116dp"
        android:layout_height="102dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/smart_img"
        android:contentDescription="smart image"/>

    <ImageView
        android:id="@+id/dtr"
        android:layout_width="82dp"
        android:layout_height="60dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="210dp"
        android:src="@drawable/dtr_img"
        android:contentDescription="dtr image"/>

    <ImageView
        android:id="@+id/rectange_blue"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:src="@drawable/rectangle_blue"
        android:layout_below="@id/wave3_top"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="90 Hours Left"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignTop="@id/rectange_blue"/>


    <TextView
        android:id="@+id/upcoming_duty_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rectange_blue"
        android:layout_marginStart="58dp"
        android:text="Upcoming Duty:"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_upcoming_duty"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/upcoming_duty_label"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:elevation="6dp"
        app:cardBackgroundColor="@color/yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/upcoming_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending: September 5, 2024"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/upcoming_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: 7:30 am - 9:00 am"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/upcoming_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject: PED 031"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/upcoming_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher: Mrs. Marlyn Ogoy"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/upcoming_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room: RS 115"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/upcoming_students_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Students List: [link]"
                android:textColor="@color/white" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/finished_duty_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_upcoming_duty"
        android:layout_alignStart="@id/rectange_blue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="10dp"
        android:text="Finished Duty:"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="UnknownId" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_finished_duty"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/finished_duty_label"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:elevation="6dp"
        app:cardBackgroundColor="@color/yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/completed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed: August 29, 2024"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/finished_students_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Students List: [link]"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/finished_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: 7:30 am - 9:00 am"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/finished_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject: PED 031"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/finished_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher: Mrs. Marlyn Ogoy"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/finished_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room: RS 115"
                android:textColor="@color/white"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@drawable/rectangle_bottom"
        android:padding="20dp"
        android:layout_weight="0">


        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:src="@drawable/home_icon" />

        <ImageView
            android:id="@+id/dtrIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:src="@drawable/timeline_icon" />

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon" />
    </LinearLayout>

</RelativeLayout>


