
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_student_home_page"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fillViewport="true"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/top_wave"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="top_wave"
                android:scaleType="fitXY"
                android:src="@drawable/top_wave" />

            <ImageView
                android:id="@+id/rectange_blue"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:src="@drawable/rectangle_blue" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="-50dp"
                android:text="90 Hours Left"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/upcoming_duty_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:text="Upcoming Duty:"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/card_upcoming_duty"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/yellow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/upcoming_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending: September 5, 2024"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/upcoming_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 7:30 am - 9:00 am"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject: PED 031"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher: Mrs. Marlyn Ogoy"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room: RS 115"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/upcoming_students_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Students List: [link]"
                        android:textColor="@color/white" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/finished_duty_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="10dp"
                android:text="Finished Duty:"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="UnknownId" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_finished_duty"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/yellow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/completed_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed: August 29, 2024"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/finished_students_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Students List: [link]"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/finished_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: 7:30 am - 9:00 am"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/finished_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject: PED 031"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/finished_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teacher: Mrs. Marlyn Ogoy"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/finished_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room: RS 115"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:background="@drawable/rectangle_bottom"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="87dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/time_line"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home_icon" />

        <ImageView
            android:id="@+id/time_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/timeline_icon"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="29dp" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/time_line"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_icon"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>