<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account_details_student">

    <ImageView
        android:id="@+id/top_wave2"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="-29dp"
        android:contentDescription="@string/top_wave2"
        android:scaleType="fitXY"
        android:src="@drawable/topwave_2" />

    <TextView
        android:id="@+id/account_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/account_details"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="160dp"
        />

    <LinearLayout
        android:id="@+id/student_account_details_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="300dp"
        android:layout_marginStart="50dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_label"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/yellow"
                />

            <TextView
                android:id="@+id/name_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                />
    </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/student_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/student_id_label"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/student_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"

                />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_label"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/yellow"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/email_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"

                />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile_number_label"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/yellow"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/mobile_number_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"

                />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/date_of_birth_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_of_birth_label"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/yellow"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/date_of_birth_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/Year_level_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year_level_label"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/yellow"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                />

            <TextView
                android:id="@+id/Year_level_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"


                />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/sex_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sex_label"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/yellow"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/sex_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"

                />
        </LinearLayout>
    </LinearLayout>







</FrameLayout>